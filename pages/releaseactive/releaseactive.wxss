.releaseactive{
  padding: 10rpx 40rpx;
}
.releasetext{
  width: 100%;
  height: 180rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  overflow: hidden;
  color: #666666;
}
.releaseplace{
  font-size: 30rpx;
  line-height: 60rpx;
  color: #BFBFBF;
}
.wordlen{
  width: 100%;
  height: 60rpx;
} 
.wordlen text{
  font-size: 30rpx;
  color: #919191;
  line-height: 60rpx;
  float: right;
}
.location{
  width: 100%;
  height: 60rpx;
  border-top: #f0f0f0 solid 1px;
  border-bottom: #f0f0f0 solid 1px;
  margin-top: 20rpx;
  padding: 20rpx 0px;
}
.location text{
  font-size: 30rpx;
  line-height: 60rpx;
}
.locaicon{
  color: #40A9FF;
  float: left;
  line-height: 65rpx;
  margin-right: 10rpx;
}
.location text{
  color: #97A9B8;
  font-size: 30rpx;
}
.imgbox image{
  width: 100%;
  height: auto;
}
.imgbox{
  width: 31%;
  min-height: 80px;
  margin-right: 3.5%;
  box-shadow: 0px 0px 5px rgba(0, 0, 0, .2);
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  align-content:center;
}
.uploadimg{
  width: 100%;
  display: flex;
  flex-wrap: wrap ;
  border-radius: 10rpx;
}
.uploadimg .imgbox:nth-child(3n){
  margin-right: 0px;
}
.addicon{
  width: 100%;
  height: 100%;
  line-height: 100%;
  text-align: center;
  color: #97A9B8;
}
.searchlocal{
  float: right;
  line-height:65rpx;
  font-size: 20rpx;
  color: #666666;
  margin-right: 20rpx;
}
.save{
  font-size: 40rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  color: #35CFC9;
  background: #FFFFFF;
  box-shadow: 0 -2px 10px 0 rgba(0,109,117,0.10);
  position: fixed;
  left: 0px;
  bottom: 0px;
  border:none;
}