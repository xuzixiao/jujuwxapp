.banner{
  width: 100%;
  height: auto;
  position: relative;
}
.banner image{
  width: 100%;
  height: auto;
}
.state{
  position: absolute;
  background: rgba(245,33,45,0.80);
  border-radius: 2px;
  color: #fff;
  font-size: 12px;
  padding: 4px 5px;
  top: 20px;
  left: 20px;
}
.main{
  margin: 10px;
}
.activedetail{
  width: 100%;
  height: auto;
  background: #f2f2f2;
  padding-bottom: 60px;
}
.Originator{
  background: #fff;
  display: flex;
  border-radius: 4px;
  box-shadow: 0px 0px 3px rgba(0,0,0,.1);
  padding: 4px 0px;
}
.originheadimg{
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin: 25px 20px;
}
.originator-main{
  margin-top: 10px;
}
.originator-main view{
  font-size: 12px;
  line-height: 28px;
  color: #666666;
}
.fixedbtn{
  width: 100%;
  height: 46px;
  background: #fff;
  position: fixed;
  left: 0px;
  bottom: 0px;
  display: flex;
  overflow: hidden;
  border-top: #f2f2f2 solid 1px;
  box-shadow: 2px 2px 2px rgba(0,0,0,.2);
}
.fixedbtn .btn{
  width: 50%;
  line-height: 48px;
  background: #fff;
  color: #36d0ca;
  border-radius: 0px!important;
  text-align: center;
  font-size: 16px;
  /* border-right: #e1e6ea solid 1px; */
  box-sizing: border-box;
  border: #ffffff solid 1px!important;
}
.fixedbtn .btn:nth-child(2n){
  border-right: 0px;
}
.Originator-main{
  padding: 0 10px;
  background: #fff;
  margin-top: 10px;
  border-radius: 4px;
  box-shadow: 0px 0px 3px rgba(0,0,0,.1);
}
.line{
  border-bottom: #f2f4f6 solid 1px;
  min-height: 38px;
  line-height: 38px;
  display: flex;
  position: relative;
  box-sizing: content-box;
}
.line text{
  font-size: 13px;
  line-height: 38px;
}
.tit{
  color: #97a9b8;
  width: 26%;
}
.concent{
  color: #666666;
  width: 73%;
}
.more{
  display: block;
  width: 5px;
  height: 38px;
  position: absolute;
  right: 10px;
  top: 0px;
}
.bidixs{
  position: absolute;
  right: 25px;
  text-align: right;
}
.xuanshou{
  display: block!important;
  overflow: hidden;
  height: 50px;
}
.xuanshou .userimg{
display:block;
width: 36px;
height: 36px;
margin:5px 14px 5px 0px;
border-radius: 50%;
float: left
}
.ing{
   background: rgba(245,33,45,0.80);
}
.begin{
  background: rgba(0,0,0,0.52);
}
.after{
  background: rgba(144,144,144,0.80);
}

