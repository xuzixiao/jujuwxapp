.mine-box{
  width: 94%;
  margin: 150rpx 3% 30px;
  background: #fff;
  box-shadow: 2rpx 2rpx 20rpx rgba(0,0,0,.1);
  border-radius: 10rpx;
}
.mine-head{
  width: 100%;
  height: 280rpx;
  float: left;
  margin-top: -75rpx;
  border-bottom: #eaeef1 solid 1rpx;
}
.headimg{
  display: block;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin: 0 auto;
  box-shadow: 0px 0px 20px rgba(0,0,0,.1);
  position: relative;
  overflow: hidden;
}
.nickname{
  display: block;
  width: 100%;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 40rpx;
  color: #666666;
}
.mine-nav{
  width: 94%;
  height: auto;
  float: left;
  padding-left: 6%;
  border-bottom: #eaeef1 solid 1px;
  margin-bottom:150rpx;
}
.mine-nav .line{
  height: auto;
  min-height: 80rpx;
  border-bottom: #eaeef1 solid 1px;
}
.mine-nav .line:last-child{
  border-bottom: none;
}
.mine-nav .line text{
  font-size: 30rpx;
  line-height: 80rpx;
  color: #4f5961;
}
.mine-nav navigator image{
  width: 30rpx;
  height: 30rpx;
  float: right;
  margin: 25rpx;
}
.line-label{
  width:30%; 
  height: 79rpx;
  line-height: 79rpx;
  float: left;
}
.line-input{
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  float: left;
}
.save{
  font-size: 40rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  color: #35CFC9;
  background: #FFFFFF;
  box-shadow: 0 -2px 10px 0 rgba(0,109,117,0.10);
  position: fixed;
  left: 0px;
  bottom: 0px;
  border:none;
}
.update{
  display: inline-block;
  width:60rpx;
  height:35rpx;
}
.changheadimg{
  width: 100%;
  height: 40rpx;
  position: absolute;
  bottom: 0px;
  left: 0px;
  background: rgba(0,0,0,.4);
}
.changheadimg image{
  display: block;
  width: 30rpx;
  height: 30rpx;
  margin: 5rpx auto;
}
.addlabel{
  float: left;
}
.addlabel image{
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin: 15rpx;
  float: left;
}
.place-holder{
  color: #bfbfbf;
}
.openwin{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0px;
  top: 0px;
  z-index: 1000;
  background: rgba(0,0,0,.4);
}
.win-con{
 background: #fff;
 width: 84%;
 position:fixed;
 left: 5%;
 top: 20%;
 padding:0 3%;
 border-radius: 10rpx;
}
.win-con .win-title{
  width: 100%;
  height: 100rpx;
  position: relative;
}
.win-con .win-title text{
  line-height: 100rpx;
  font-size: 30rpx;
}
.win-con .win-handle{
  width: 100%;
  text-align: right;
  margin: 20rpx 0;
}
.win-con .win-handle button{
  display: inline-block;
  width: auto;
  height: 2em;
  line-height: 2em;
  font-size: 30rpx;
  margin-left: 20rpx;
}
.win-con .inputtext{
  display: block;
  width: 96%;
  padding: 0 2%;
  height: 2em;
  line-height: 2em;
  border:#eaeef1 solid 1px;
  font-size: 30rpx;
}
.confirm{
  background:#35CFC9;
  color: #fff;
}
.updateheadimg{
  display: block;
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto;
}
.win-upload-btn{
  text-align: center;
  width: 100%;
  height: 80rpx;
}
.win-upload-btn button{
  display: inline-block;
  width: auto;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  margin: 10rpx 0;
}
.win-title .close{
  display: block;
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right:0rpx;
  top: 25rpx;
}
