.info-list{
  /* box-shadow: 0 0 10rpx rgba(0,0,0,.1); */
  padding: 38rpx;
  border-radius: 8rpx;
  margin-bottom: 0rpx;
}
.info-list .info-head{
  height: 128rpx;
  display: flex;
}
.info-list .headimg{
  display: block;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}
.info-list .userinfo{
float: left;
margin-left: 38rpx;
}
.username{
  font-size: 36rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #666666;
}
.usrtap{
  width: 100%;
  height: 58rpx;
  overflow: hidden;
  padding-top: 10rpx;
}
.infotext{
  padding: 15rpx 0;
  font-size: 12px;
  line-height: 24px;
}
.infotext text{
  font-size: 12px;
  line-height: 24px;
  color: #666666;
  text-align: justify;
}
.info-swipe{
  display: flex;
  width: 100%;
  justify-content: left;
  flex-wrap: wrap;
}
.info-swipe .imgbox{
  width: 31%;
  margin-right: 3.5%;
  height: auto;
  box-shadow: 0px 0px 5px rgba(0, 0, 0, .2);
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  align-content:center;
}
.info-swipe .imgbox:nth-child(3n){
  margin-right: 0px;
}
.info-swipe .imgbox image{

  width: 100%;
  height: 200rpx;
}

.delthisinfo{
  color: #3da2ff!important;
}
.infohand-line{
 line-height: 60rpx; 
}
.infohand-line text{
  font-size: 12px;
  color: #97A9B8;
  margin-right: 20rpx;
}
.infohand-line .l-item{
  width:150rpx;
  display: inline-block;
  height: 60rpx;
}
.location{
  color: #40A9FF;
  height: 30rpx;
  margin-top: 15rpx;
  float: left;
  margin-right: 10rpx;
}
.infohand-line .l-item .l-item-tb{
  color: #97A9B8!important;
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx 10rpx 10rpx 0;
}
.infohand-line .l-item text{
  float: left;
}
