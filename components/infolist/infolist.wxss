.info-list{
  box-shadow: 0 0 10rpx rgba(0,0,0,.1);
  padding: 38rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}
.info-list .info-head{
  height: 128rpx;
  display: flex;
}
.info-list .headimg{
  display: block;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}
.info-list .userinfo{
float: left;
margin-left: 38rpx;
}
.username{
  font-size: 36rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #666666;
}
.usrtap{
  width: 100%;
  height: 58rpx;
  overflow: hidden;
  padding-top: 10rpx;
}
.infotext{
  padding: 15rpx 0;
}
.infotext text{
  font-size: 12px;
  line-height: 24px;
  color: #666666;
  text-align: justify;
}
.swiper{
  width: 100%;
  height: 600rpx;
  box-shadow: 0 0 10rpx rgba(0,0,0,.1);
  border-radius: 6px;
  overflow: hidden; 
}
.swiper .slide-image{
  width: 100%;
  height: 100%;
}
.delthisinfo{
  color: #3da2ff!important;
}
.infohand-line{
 line-height: 26px; 
}
.infohand-line text{
  font-size: 12px;
  color: #97A9B8;
  margin-right: 6px;
}
.infohand-line .l-item{
  width:60px;
  display: inline-block;
  height: 20px;
}
.location{
  color: #40A9FF;
  height: 30rpx;
  margin-top: 15rpx;
  float: left;
  margin-right: 10rpx;
}
.infohand-line .l-item text{
  font-size: 12px;
  margin-left: 10px;
  float: left;
}
.icon{
  display:block;
  width: 15px;
  height: 15px;
  margin: 6px 3px 0px 0px;
  float: left;
}
.infor-icon{
  float: left;
}